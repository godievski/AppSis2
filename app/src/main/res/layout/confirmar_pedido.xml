<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ScrollView
            android:id="@+id/confirmar_pedido_sw"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="60dp">
            <!--aca se crean los catalogos-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/confirmar_pedido_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <Button
                        android:id="@+id/confirmar_pedido_anterior"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="40dp"
                        android:layout_weight="1"
                        android:text="anterior" />

                    <Button
                        android:id="@+id/confirmar_pedido_siguiente"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="40dp"
                        android:layout_weight="1"
                        android:text="siguiente" />


                </LinearLayout>
            </LinearLayout>


        </ScrollView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:weightSum="5">


            <ImageButton
                android:id="@+id/perfil_button"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:minWidth="0dp"
                android:scaleType="fitCenter"
                android:src="@drawable/user" />

            <ImageButton
                android:id="@+id/catalogo_button"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:minWidth="0dp"
                android:scaleType="fitCenter"
                android:src="@drawable/grocery" />

            <ImageButton
                android:id="@+id/hacer_pedido_button"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:minWidth="0dp"
                android:scaleType="fitCenter"
                android:src="@drawable/cart" />

            <ImageButton
                android:id="@+id/administrar_pedido_button"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:minWidth="0dp"
                android:scaleType="fitCenter"
                android:src="@drawable/truck" />

            <ImageButton
                android:id="@+id/historial_button"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:minWidth="0dp"
                android:scaleType="fitCenter"
                android:src="@drawable/history" />
        </LinearLayout>
    </RelativeLayout>


</LinearLayout>