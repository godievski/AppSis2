<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ScrollView
            android:id="@+id/cuotas_sw"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="60dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:weightSum="2">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginTop="50dp"
                        android:text="$/"
                        android:textSize="70sp" />

                    <TextView
                        android:id="@+id/cuotas_total"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginTop="50dp"
                        android:text="999999.0"
                        android:textSize="70dp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginTop="30dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="Escoger cuotas"
                        android:textSize="36dp" />

                    <EditText
                        android:id="@+id/cuotas_numero_cuotas"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="20dp"
                        android:hint="nº cuotas"
                        android:inputType="number" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_margin="40dp">

                    <TextView
                        android:layout_width="155dp"
                        android:layout_height="match_parent"
                        android:text="Monto de cuota:        "
                        android:textSize="24dp" />

                    <TextView
                        android:id="@+id/cuotas_monto_de_cuota"
                        android:layout_width="181dp"
                        android:layout_height="match_parent"
                        android:textSize="24dp"
                        android:text="nª" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10dp">

                    <Button
                        android:id="@+id/cuotas_anterior"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="40dp"
                        android:layout_weight="1"
                        android:text="anterior" />

                    <Button
                        android:id="@+id/cuotas_siguiente"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="40dp"
                        android:layout_weight="1"
                        android:text="Terminar" />

                </LinearLayout>
            </LinearLayout>

        </ScrollView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:weightSum="5">


            <ImageButton
                android:id="@+id/perfil_button"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:minWidth="0dp"
                android:scaleType="fitCenter"
                android:src="@drawable/user" />

            <ImageButton
                android:id="@+id/catalogo_button"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:minWidth="0dp"
                android:scaleType="fitCenter"
                android:src="@drawable/grocery" />

            <ImageButton
                android:id="@+id/hacer_pedido_button"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:minWidth="0dp"
                android:scaleType="fitCenter"
                android:src="@drawable/cart" />

            <ImageButton
                android:id="@+id/administrar_pedido_button"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:minWidth="0dp"
                android:scaleType="fitCenter"
                android:src="@drawable/truck" />

            <ImageButton
                android:id="@+id/historial_button"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:minWidth="0dp"
                android:scaleType="fitCenter"
                android:src="@drawable/history" />
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>